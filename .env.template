# LLM Configuration
# Wybierz provider: "openai", "gemini", lub "local"
LLM_PROVIDER=openai

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite

# Lokalny LLM (stub mode)
LOCAL_LLM_ENABLED=true

# RAG Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
FAISS_INDEX_PATH=./data/match_index
TOP_K_RETRIEVAL=5

# Security
TIMEOUT_SECONDS=30
MAX_INPUT_LENGTH=2000
MAX_OUTPUT_TOKENS=4096

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=false

# Data paths
MATCH_DATA_PATH=./DANE
